options: {% for key, value in keys.items() %}
  {{key}}:
    description:
    - {{value.help}} {% if value.aliases %}
    aliases: [ {% for x in value.aliases %}{%if not loop.last %}{{x}}, {% endif %}{% endfor %}{{value.aliases[-1]}} ] {% endif %}{% if value.options %}
